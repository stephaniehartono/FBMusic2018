<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="comcse_110_winter_2018cse_110_team_project_team_14.httpsgithub.flashbackmusic.FlashbackActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_margin="25dp"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="F L A S H B A C K"
            android:textSize="25sp"
            android:textColor="#000"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/album"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:src="@drawable/album"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/song_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:autoSizeTextType="uniform"
                    android:text="Song Name"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginLeft="18dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/neutral"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/neutral" />

            </LinearLayout>

            <TextView
                android:id="@+id/album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="Album Name"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:background="#fff"
                android:src="@drawable/back"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>

            <ImageButton
                android:id="@+id/play"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:src="@drawable/play"
                android:background="#fff"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>

            <ImageButton
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:src="@drawable/next"
                android:background="#fff"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rectangle">

            <TextView
                android:id="@+id/timeLastPlayed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="play time"
                android:textColor="#000000"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/locationLastPlayed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="location"
                android:textColor="#000000"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>