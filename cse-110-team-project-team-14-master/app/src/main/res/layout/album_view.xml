<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comcse_110_winter_2018cse_110_team_project_team_14.httpsgithub.flashbackmusic.AlbumActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="center">

    <ToggleButton
        android:id="@+id/tg_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textOff="Normal"
        android:textOn="Flashback"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/capsule"
        android:layout_margin="7dp"
        android:textSize="12sp"/>

    <ListView
        android:id="@+id/albumList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center|bottom"
        android:weightSum="1">

        <Button
            android:id="@+id/goToSongs"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#bcbcbc"
            style="?android:attr/borderlessButtonStyle"
            android:textAllCaps="false"
            android:text="All Songs"
            android:layout_gravity="bottom"/>

        <Button
            android:id="@+id/goToAlbum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#acacac"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle"
            android:text="Albums"
            android:layout_gravity="bottom"/>
    </LinearLayout>

</LinearLayout>
</RelativeLayout>